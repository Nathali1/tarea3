<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="5dp"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"

    tools:context="com.example.nathali.tareawebview.MainActivity">



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Web de Restaurantes Populares"
            android:id="@+id/textView" />

        <GridView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/gridView"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"

            android:columnWidth="145dp"
            android:horizontalSpacing="5dp"
            android:numColumns="auto_fit"
            android:stretchMode="columnWidth"
            android:verticalSpacing="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/estado"
                android:id="@+id/textView"
                android:gravity="center" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:id="@+id/rdg"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/soltero"
                    android:id="@+id/radioButton6"
                    android:gravity="center"
                    android:checked="false"
                    android:onClick="activa"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/casado"
                    android:id="@+id/radioButton5"
                    android:gravity="center"
                    android:checked="false"
                    android:onClick="activa"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/divorciado"
                    android:id="@+id/radioButton4"
                    android:gravity="center"
                    android:checked="false"
                    android:onClick="activa"/>
            </RadioGroup>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
